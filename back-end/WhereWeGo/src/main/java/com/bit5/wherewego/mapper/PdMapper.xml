<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bit5.wherewego.product.ProductDAOImp">
  	<!-- 제품 리스트 
  	<select id="pdAllSelect" resultType="com.bit5.wherewogo.product.ProductVO">
  		<![CDATA[ 
  		select * from
  		(select * from
  		(select p_num, brand, name, price, img, gender
  		from product order by p_num desc )
  		where rownum<=#{param1} order by p_num asc )  
     	 where rownum<=#{param2} order by p_num desc 
  		 ]]>
   
  	</select>
  	-->
  	
  	<!-- 제품리스트페이징 -->
	<select id="totalRecordCount" resultType="int">
		select count(p_num) totalRecord from product
	</select>
</mapper>  	
